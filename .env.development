# Enable Fast Refresh for better hot reload
FAST_REFRESH=true

# Enable source maps in development (helps with hot reload)
GENERATE_SOURCEMAP=true

# Webpack Dev Server configuration
WDS_SOCKET_HOST=localhost
WDS_SOCKET_PORT=3000
WDS_SOCKET_PATH=/ws

# Force file watching to use polling (more reliable on macOS)
CHOKIDAR_USEPOLLING=true
CHOKIDAR_INTERVAL=1000

# Disable ESLINT plugin warnings that might block hot reload
DISABLE_ESLINT_PLUGIN=false
TSC_COMPILE_ON_ERROR=true

# Ensure environment is set to development
NODE_ENV=development
